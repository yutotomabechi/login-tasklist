<%= session[:user_id] %>
    
    <%= form_for(task) do |f| %>

  
<% if task.errors.any? %>
<div class="alert alert-warning">
    <div id="error_explanation">
      <h2>
          <%= pluralize(task.errors.count, "error") %> found. Warning!!:</h2>

      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
    </div>
  <% end %>
  
  <div class="row">
    <div class= "col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
      
    <div class="form-group">
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content, class: 'form-control' %>
    
  </div>
  </div>
  
  <div class= "col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
    <div class="form-group">
    <%= f.label :status, 'ステータス' %>
    <%= f.text_field :status, class: 'form-control' %>
  </div>
</div>
   </div>
 
  <%= f.submit '投稿', class: 'btn btn-primary' %>
<% end %>
  </div>
</div>

 

